{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"baseUrl": "./src",
		"jsx": "react",
		"paths": {
			"*": ["*", "src/*"]
		}
	},
	"typeAcquisition": {
		"enable": true
	},
	"typingOptions": {
		"enableAutoDiscovery": true
	},
	"compileOnSave": true,
	"allowJS": true,
	"include": ["src/**/*"]
}
